{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "lib": [ "dom", "es2015", "scripthost", "es2015.promise" ],
    "moduleResolution": "node"
  },
  "exclude": [
    "apiworkbench.com",
    "atom-package",
    "dist",
    "docs.raml.org",
    "documentation",
    "example-ramls",
    "examples",
    "grammars",
    "images",
    "java",
    "keymaps",
    "menus",
    "microsite",
    "node_modules",
    "public",
    "settings",
    "styles",
    "tools",
    "typings/browser",
    "typings/**",
    "custom_typings",
    "typings"
  ]
}
